<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.strategist.morning</string>

    <key>ProgramArguments</key>
    <array>
        <string>{{HOME_DIR}}/Github/FMT-exocortex-template/agents/strategist/scripts/strategist.sh</string>
        <string>morning</string>
    </array>

    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>{{TIMEZONE_HOUR}}</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <key>StandardOutPath</key>
    <string>{{HOME_DIR}}/logs/strategist/launchd-morning.log</string>

    <key>StandardErrorPath</key>
    <string>{{HOME_DIR}}/logs/strategist/launchd-morning-error.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin</string>
        <key>HOME</key>
        <string>{{HOME_DIR}}</string>
    </dict>

    <key>RunAtLoad</key>
    <true/>
</dict>
</plist>
